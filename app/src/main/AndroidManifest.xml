<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thomson.hci">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_app_icon_v2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PowerUsageActivity"
            android:label="@string/title_activity_powerstat"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SmartApp1Activity"
            android:label="@string/title_activity_smartapp1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SmartSleepActivity"
            android:label="@string/title_activity_sleeptracker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.BasicActivity" />
        <activity android:name=".Activities.HelpActivity"></activity>
    </application>

</manifest>