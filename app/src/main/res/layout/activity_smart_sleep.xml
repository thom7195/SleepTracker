<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_smart_sleep"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.thomson.hci.Activities.SmartSleepActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

                >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
           >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:id="@+id/status"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="@string/currently_sleeping"
                />
            <Switch
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:id="@+id/switch_sleeping"
                />
            <ImageButton
                android:layout_width="15dp"
                android:layout_weight="10"
                android:id="@+id/imgbutton_help"
                android:src="@android:drawable/ic_menu_help"
                android:layout_height="30dp" />

        </LinearLayout>

        </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/li"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_margin="@dimen/activity_horizontal_margin">





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sleep_schedule_header"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="420dp"
            android:id="@+id/list">

        </ListView>

    </LinearLayout>


</LinearLayout>
